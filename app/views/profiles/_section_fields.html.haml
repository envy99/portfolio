.box.has-text-centered.js-nested-fields
  %p.is-size-5 Section
  .field
    .control
      = f.label :name, class: "label"
      = f.text_field :name, class: "input", placeholder: "Section name"
  .field
    .message
      .message-header
        %p.is-size-4 Items
      .message-body.js-items
        = f.fields_for :items do |item|
          = render "item_fields", f: item
        .links
          = link_to_add_association f, :items, class: "button is-link" do
            %span Add new item
            %span.icon
              .fa.fa-plus-circle
  .links
    = link_to_remove_association f, data: { confirm: "Are you sure?" }, wrapper_class: "js-nested-fields", class: "button is-danger" do
      %span Delete
      %span.icon
        .fa.fa-trash
